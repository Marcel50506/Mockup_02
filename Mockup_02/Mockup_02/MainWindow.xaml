<Window x:Class="Mockup_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="600" Width="1000">
    <Grid x:Name="grid">
    	<Grid.ColumnDefinitions>
        		<ColumnDefinition Width="3*"/>
				<ColumnDefinition Width="2"/>
        		<ColumnDefinition Width="6.95*"/>
        </Grid.ColumnDefinitions>
        <Grid Height="114" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="Rationale" Grid.Column="0" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Stretch" Margin="0,114,0,2" Name="Components" Grid.Column="0"/>
        <Grid Height="96" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="Assignment" Grid.Column="2" VerticalAlignment="Top"/>
        <Grid Height="468" HorizontalAlignment="Stretch" Margin="0,96,0,0" Name="Overview" Grid.Column="2" VerticalAlignment="Top">
        	<Image x:Name="image1" Margin="0,8,0,0" HorizontalAlignment="Left" Width="228.42" Height="158.5" VerticalAlignment="Top"/>
        	<Button x:Name="Button1" Content="Button" Margin="122.42,170.5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="matLab1_Click"/>
        	<TextBox x:Name="input01" HorizontalAlignment="Left" Height="21.96" Margin="31.92,170.5,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="71"/>
        </Grid>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Height="{Binding ActualHeight, ElementName=grid}"/>
    </Grid>
</Window>
